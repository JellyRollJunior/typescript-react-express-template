{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    /* Runtime */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Path aliases */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@root/*": ["../*"],
    }
  },
  "include": ["src"]
}
